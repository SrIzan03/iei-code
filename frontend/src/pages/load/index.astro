---
import Layout from "../../layouts/Layout.astro";
import Checkbox from "../../components/Checkbox.astro";

import { cle, cv, eus, allSelected, loadResult } from "../load/script";
---

<Layout>
    <div
        class="h-screen flex flex-col items-center justify-center gap-20 bg-gray-300"
    >
        <h1 class="text-2xl/7 font-bold text-gray-900">
            Carga del almacén de datos
        </h1>
        <div class="h-auto flex items-start justify-center gap-7">
            <h2>Seleccione fuente:</h2>
            <div
                class="flex items-start justify-center flex-col flex-wrap"
                id="checkbox-container"
            >
                <Checkbox id={allSelected} text="Todas las opciones" />
                <Checkbox id={cle} text="Castilla y León" />
                <Checkbox id={cv} text="Comunitat Valenciana" />
                <Checkbox id={eus} text="Euskadi" />
            </div>
        </div>
        <div class="flex items-start justify-center flex-row gap-4">
            <a href="/">
                <button
                    class="bg-transparent font-bold py-2 px-4 rounded border border-blue-500 hover:bg-blue-500"
                    >Cancelar</button
                >
            </a>
            <button
                id="load-btn"
                class="bg-gray-500 font-bold py-2 px-4 rounded border text-white hover:border-gray-400 hover:bg-transparent hover:text-black"
                >Cargar</button
            >
            <button
                id="delete-btn"
                class="bg-pink-400 font-bold py-2 px-4 rounded border text-white hover:border-pink-400 hover:bg-transparent hover:text-black"
                >Borrar almacén de datos</button
            >
        </div>
        <h2 class="text-xl font-bold text-gray-800">Resultado de carga</h2>
        <div
            class="h-2/5 w-2/3 rounded border bg-white overflow-scroll whitespace-pre-wrap"
            id={loadResult}
        >
        </div>
    </div>
</Layout>

<script>
    import { addButtonsActions, addCheckboxEventListeners } from "./script";

    document.addEventListener("DOMContentLoaded", () => {
        addCheckboxEventListeners();
        addButtonsActions();
    });
</script>
